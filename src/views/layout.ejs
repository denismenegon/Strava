<!-- src/views/layout.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title> <!-- Título dinâmico -->
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        button {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            background-color: #ff4c00;
            color: white;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #e04300;
        }
        #menu {
            display: none; /* Inicialmente o menu estará oculto */
            margin-top: 20px;
        }
        #menu a {
            margin: 0 10px;
            text-decoration: none;
            color: #333;
            font-size: 18px;
        }
        #menu a:hover {
            color: #ff4c00;
        }
    </style>
</head>
<body>
    <%- include('partials/autenticar') %>

    <!-- Menu de navegação -->
    <nav id="menu" style="<%= authenticated ? 'display:block;' : 'display:none;' %>">
        <a href="/activities">Atividades</a>
        <a href="/dashboard">Dashboard</a>
        <a href="/logout">Sair</a>
    </nav>

    <!-- Área para o conteúdo dinâmico -->
    <div id="content">
        <%- body %> <!-- Conteúdo da página será inserido aqui -->
    </div>

    <!-- Incluir o script de autenticação -->
    <!-- <script src="/js/auth.js"></script> -->
</body>
</html>